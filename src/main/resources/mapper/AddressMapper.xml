<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.AddressMapper">

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO address (user_id,
                             concat_person,
                             get_adr,
                             concat_phone,
                             is_default)
        VALUES (#{userId},
                #{concatPerson},
                #{getAdr},
                #{concatPhone},
                #{isDefault})
    </insert>

    <update id="update">
        UPDATE address
        <set>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="concatPerson != null and concatPerson != ''">
                concat_person = #{concatPerson},
            </if>
            <if test="getAdr != null and getAdr != ''">
                get_adr = #{getAdr},
            </if>
            <if test="concatPhone != null and concatPhone != ''">
                concat_phone = #{concatPhone},
            </if>
            <if test="isDefault != null">
                is_default = #{isDefault},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="batchDelete" parameterType="list">
        DELETE FROM address WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!--分页查询信息-->
    <select id="query" resultMap="BaseResultMap">
        SELECT a.*
        FROM address a
        <where>
            <if test="userId != null">
                AND a.user_id = #{userId}
            </if>
            <if test="concatPerson != null and concatPerson != ''">
                AND a.concat_person LIKE concat('%',#{concatPerson},'%')
            </if>
            <if test="getAdr != null and getAdr != ''">
                AND a.get_adr LIKE concat('%',#{getAdr},'%')
            </if>
            <if test="isDefault != null">
                AND a.is_default = #{isDefault}
            </if>
        </where>
        ORDER BY a.is_default DESC, a.id DESC
        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>
    </select>

    <!--满足分页条件的数据总项-->
    <select id="queryCount" resultType="integer">
        SELECT COUNT(*)
        FROM address a
        <where>
            <if test="userId != null">
                AND a.user_id = #{userId}
            </if>
            <if test="concatPerson != null and concatPerson != ''">
                AND a.concat_person LIKE concat('%',#{concatPerson},'%')
            </if>
            <if test="getAdr != null and getAdr != ''">
                AND a.get_adr LIKE concat('%',#{getAdr},'%')
            </if>
            <if test="isDefault != null">
                AND a.is_default = #{isDefault}
            </if>
        </where>
    </select>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.entity.Address">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="concat_person" property="concatPerson"/>
        <result column="get_adr" property="getAdr"/>
        <result column="concat_phone" property="concatPhone"/>
        <result column="is_default" property="isDefault"/>
    </resultMap>

</mapper>