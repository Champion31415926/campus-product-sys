<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kmbeast.mapper.ContentMapper">

    <insert id="save">
        INSERT INTO content (user_id, name, detail, cover, create_time)
        VALUES (#{userId}, #{name}, #{detail}, #{cover}, #{createTime})
    </insert>

    <update id="update">
        UPDATE content
        <set>
            <if test="name != null and name != ''">
                name = #{name},
            </if>
            <if test="detail != null and detail != ''">
                detail = #{detail},
            </if>
            <if test="cover != null and cover != ''">
                cover = #{cover},
            </if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="batchDelete" parameterType="list">
        DELETE FROM content WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!--分页查询信息-->
    <select id="query" resultMap="BaseResultMap">
        SELECT c.*,
        u.user_name,
        u.user_avatar
        FROM content c
        LEFT JOIN user u ON u.id = c.user_id
        <where>
            <if test="id != null">
                AND c.id = #{id}
            </if>
            <if test="name != null and name != ''">
                AND c.name LIKE concat('%',#{name},'%')
            </if>
            <if test="userId != null">
                AND c.user_id = #{userId}
            </if>
            <if test="startTime != null and endTime != null">
                AND c.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
        ORDER BY c.id DESC
        <if test="current != null and size != null">
            LIMIT #{current},#{size}
        </if>
    </select>

    <!--满足分页条件的数据总项-->
    <select id="queryCount" resultType="integer">
        SELECT COUNT(*)
        FROM content c
        <where>
            <if test="id != null">
                AND c.id = #{id}
            </if>
            <if test="name != null and name != ''">
                AND c.name LIKE concat('%',#{name},'%')
            </if>
            <if test="userId != null">
                AND c.user_id = #{userId}
            </if>
            <if test="startTime != null and endTime != null">
                AND c.create_time BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
    </select>

    <select id="queryContentIds" resultType="java.lang.Integer">
        SELECT c.id
        FROM content c
        WHERE c.user_id = #{userId}
    </select>

    <select id="queryContentList" resultMap="BaseResultMap">
        SELECT c.*,
        u.user_name,
        u.user_avatar
        FROM content c
        LEFT JOIN user u ON u.id = c.user_id
        WHERE c.id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.kmbeast.pojo.vo.ContentVO">
        <id column="id" property="id"/>
        <result column="user_id" property="userId"/>
        <result column="name" property="name"/>
        <result column="detail" property="detail"/>
        <result column="cover" property="cover"/>
        <result column="create_time" property="createTime"/>
        <result column="user_name" property="userName"/>
        <result column="user_avatar" property="userAvatar"/>
    </resultMap>

</mapper>